{% extends "base.twig" %}

{% block main %}
 
    <main class="mx-10 p-4 bg-white container pt-5" style="min-height: 100vh;">
        <div class="row mt-5">
            <div class="col-12 mb-3">
                {% if searchQuery is defined %}
                    <h2>Recherche de '{{ searchQuery }}'</h2>
                {% else %}
                    <h2 class="text-center">Villes</h2>
                {% endif %}
            </div>
            
            <div class="col-12 px-3">
                <div class="list-group g-3">
                    {% for city in cities %}
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/weather/{{ city.id }}" class="link list-group-item-action text-decoration-none text-dark me-auto">
                            <div>
                                <strong>{{ city.name }}</strong> <small>({{ city.lat }}, {{ city.lon }})</small>
                            </div>
                        </a>
                        <button class="btn btn-outline-danger btn-sm rounded-circle delete-city-button" data-city-id="{{ city.id }}">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="row mt-3 px-3">
            <div class="col-12 mb-3">
                <button type="button" class="btn btn-success my-3" id="addCityButton">Ajouter une ville</button>
            </div>
            <div id="addCityForm" class="col-12 mb-3" style="display: none"> 
                {% include "addCityForm.twig" %}
            </div>
        </div>

    </main>

{% endblock %}